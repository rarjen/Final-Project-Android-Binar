<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".view.fragments.bottomsheets.BottomSheetMustLoginFragment">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="-30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="18dp"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/imageClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_close_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvSelamat"
                app:layout_constraintTop_toBottomOf="@id/imageClose"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/pink"
                android:layout_marginTop="60dp"
                android:text="@string/oops"/>

            <ImageView
                android:id="@+id/ivCart"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/tvSelamat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/illustration__secure_safe_shield_man_login_key_login_"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/loginWarning"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maaf_anda_harus_login_terlebih_dahulu"
                app:layout_constraintTop_toBottomOf="@id/ivCart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btnToLoginActivity"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toBottomOf="@id/loginWarning"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="30dp"
                android:paddingVertical="10dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/darkBlue"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/masuk" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>