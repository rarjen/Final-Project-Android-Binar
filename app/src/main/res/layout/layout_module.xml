<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clModule"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/numberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/moduleName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tujuan Mengikuti Kelas Design System"
        android:textSize="12sp"
        android:height="36dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/numberText"
        app:layout_constraintEnd_toStartOf="@id/ic_playContentChapter"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/ic_playContentChapter"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/fill_1" />

</androidx.constraintlayout.widget.ConstraintLayout>